{
    "name": "solid-devtools-multirepo",
    "private": true,
    "version": "0.1.0",
    "desciption": "development repo for solid-devtools",
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "rollup": "^2.56.1",
        "tslib": "^2.3.1",
        "typescript": ">=4.4.0",
        "yarn": "^1.22.15"
    },
    "resolutions": {
        "vite": "2.7.13",
        "esbuild": "0.13.7",
        "dom-expressions": "workspace:*",
        "babel-plugin-jsx-dom-expressions": "workspace:*",
        "lit-dom-expressions": "workspace:*",
        "hyper-dom-expressions": "workspace:*",
        "solid-js": "workspace:*",
        "babel-preset-solid": "workspace:*",
        "solid-app-router": "0.3.0",
        "vite-plugin-solid": "2.2.5",
        "solid-refresh": "0.4.0"
    },
    "scripts": {
        "bootstrap": "yarn install --mode=skip-build",
        "build-babel-plugin-jsx-dom-expressions": "yarn workspace babel-plugin-jsx-dom-expressions run build",
        "build-lit-dom-expressions": "cd submodules/dom-expressions/packages/lit-dom-expressions && npm run build",
        "build-hyper-dom-expressions": "cd submodules/dom-expressions/packages/hyper-dom-expressions && npm run build",
        "build-solid": "cd submodules/solid/packages/solid && npm run build",
        "build-solid-devtools": "cd submodules/solid-devtools && yarn run build",
        "build-dev-dependencies": "npm-run-all -c -p build-babel-plugin-jsx-dom-expressions build-lit-dom-expressions build-hyper-dom-expressions build-solid",
        "build": "npm-run-all -s build-dev-dependencies build-solid-devtools",
        "start-test1": "cd examples/test1 && ./node_modules/.bin/vite",
        "start-test2": "cd examples/test2 && ./node_modules/.bin/vite --open",
        "start-solid-tree-view": "cd examples/solid-tree-view && ./node_modules/.bin/vite --open",
        "start-solid-site": "cd examples/solid-site && ./node_modules/.bin/vite --open",
        "start-examples": "npm-run-all -p start-test2 start-solid-tree-view start-solid-site"
    },
    "packageManager": "yarn@3.0.2",
    "workspaces": [
        "examples/*",
        "submodules/dom-expressions",
        "submodules/dom-expressions/packages/*",
        "submodules/solid",
        "submodules/solid/packages/*",
        "submodules/solid-devtools"
    ]
}
